; File managed by puppet
<% if @zone_origin -%>
$ORIGIN <%= @zone_origin %>.
<% end -%>
$TTL <%= @zone_ttl %>
@ 		IN 	SOA 	<%= @zone_ns[0] %>. 	<%= @zone_contact %>. (
      				<%= Time.now.strftime('%Y%m%d%H%M') %>   ; serial
      				<%= @zone_refresh %>  ; refresh
      				<%= @zone_retry %>    ; retry
      				<%= @zone_expiracy %> ; expiracy
      				<%= @zone_ttl %> )    ; TTL
<% if ! @is_reverse
     @zone_ns.each do |ns| -
  raise(Puppet::ParseError, "Wrong ns value: '#{ns}'") unless ( ns =~ Regexp.compile('^\S+$'))
-%>
		IN 	NS 	<%= ns %>.
<%
     end
   end -%>

